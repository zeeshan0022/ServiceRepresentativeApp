<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ServiceRepresentative" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/txtColorDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecDark</item>
        <item name="colorSecondaryVariant">@color/cardBackDark</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="backgroundColor">@color/backDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/cardBackDark</item>
        <!-- Customize your theme here. -->
    </style>
</resources>