<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/analtics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/ibmplexbold"
        android:text="Analytics"

        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
        app:layout_constraintStart_toStartOf="@+id/materialCardView2"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="00dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1.4"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHeight_percent=".9"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#09034A"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/analtics">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activeBarchart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_complaint"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="0dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txtActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activeBarchart"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/imbplexmediem"
                android:text=""

                android:textColor="@color/white"
                android:textSize="18sp" />
            <ProgressBar
                android:layout_width="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"

                android:layout_height="20dp"
                android:id="@+id/pro1"
                android:layout_below="@id/activeBarchart"
                />
            <TextView
                android:id="@+id/txta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txtActive"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_toEndOf="@id/txtActive"
                android:fontFamily="@font/imbplexmediem"
                android:text="Active"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtActive"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/ibmplexbold"
                android:text="Complaints"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic__menu"
                app:tint="@color/white" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#02344F"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView2"
            app:layout_constraintDimensionRatio="1:1.4"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintStart_toEndOf="@+id/materialCardView2"
            app:layout_constraintTop_toBottomOf="@+id/analtics"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent=".5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic__menu"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/solvedComplaintBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="0dp"
                    android:src="@drawable/ic_complaint"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtSolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/solvedComplaintBarChart"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/imbplexmediem"
                    android:text=""

                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"

                    android:layout_height="20dp"
                    android:id="@+id/pro2"
                    android:layout_below="@id/solvedComplaintBarChart"
                    />

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txtSolved"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_toEndOf="@id/txtSolved"
                    android:fontFamily="@font/imbplexmediem"
                    android:text="Solved"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSolved"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/ibmplexbold"
                    android:text="Complaints"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#542DB8"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView3"
            app:layout_constraintDimensionRatio="1:1.4"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintStart_toEndOf="@+id/materialCardView3"
            app:layout_constraintTop_toBottomOf="@+id/analtics"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic__menu"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/recBillsChart"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_complaint"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="0dp"
                    app:tint="@color/white" />

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"

                    android:layout_height="20dp"
                    android:id="@+id/pro3"
                    android:layout_below="@id/recBillsChart"
                    />
                <TextView
                    android:id="@+id/txtPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recBillsChart"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"

                    android:fontFamily="@font/imbplexmediem"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@id/txtPending"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/txtPending"
                    android:fontFamily="@font/imbplexmediem"
                    android:gravity="center"
                    android:text="Cancelled"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPending"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ibmplexbold"
                    android:text="Complaint"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3"
        tools:layout_editor_absoluteX="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/imbplexmediem"
                android:text="View all"
                android:textColor="?attr/colorSecondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ibmplexbold"
                android:text="Recent Chats"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="15sp" />


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rec"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/im"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/im"
                    android:text="Zeeshan Nawaz"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtchat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtName"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@id/txtDate"
                    android:layout_toEndOf="@id/im"
                    android:ellipsize="end"

                    android:maxLines="1"
                    android:text="Hello Sir "
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Jan 18 "
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/im1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txtName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/im1"
                    android:text="Zeeshan Nawaz"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtchat1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtName1"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@id/txtDate1"
                    android:layout_toEndOf="@id/im1"
                    android:ellipsize="end"

                    android:maxLines="1"
                    android:text="Hello Sir "
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/txtDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Jan 18 "
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />


            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ibmplexbold"
        android:text="Active Complaint"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView4" />

        <TextView
            android:id="@+id/txtViewAllComplaint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/imbplexmediem"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center|end"
            android:text="View all"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintDimensionRatio="2.1"
            app:layout_constraintEnd_toEndOf="@+id/materialCardView4"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView4"
            app:layout_constraintWidth_percent=".19" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerHomeComplaint"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/complaintPro"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerHomeComplaint"
            app:layout_constraintEnd_toEndOf="@+id/recyclerHomeComplaint"
            app:layout_constraintStart_toStartOf="@+id/recyclerHomeComplaint"
            app:layout_constraintTop_toTopOf="@+id/recyclerHomeComplaint" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>